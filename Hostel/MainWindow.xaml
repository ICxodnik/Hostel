<Window x:Class="Hostel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hostel"
        mc:Ignorable="d"
        Title="MainWindow" Height="756.844" Width="810.227">
    <Window.Resources>
        <Style x:Name="TabItemStyle" TargetType="{x:Type TabItem}">
            <Setter Property="Height" Value="50" ></Setter>
            <Setter Property="Width" Value="250" ></Setter>
        </Style>
        
        <Style x:Name="StyleButtonMenu" TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5" ></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFBCC8C0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/12.png"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>

                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width=" Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label x:Name="labelDateTime" HorizontalAlignment="Center" VerticalAlignment="Top">
                        Дата заказа:
                    </Label>
                    <Label x:Name="labelDateTimeLast" HorizontalAlignment="Center" VerticalAlignment="Top">
                        Осталось дней:
                    </Label>
                </StackPanel>

                <Image Grid.Column="1" Source="Image\1.png" Height="100" ></Image>

                <StackPanel Grid.Column="2">
                    <Label x:Name="labelClientName" HorizontalAlignment="Center" VerticalAlignment="Top">
                        Имя:
                    </Label>
                    <Label x:Name="labelClientNomer" HorizontalAlignment="Center" VerticalAlignment="Top">
                        Номер:
                    </Label>
                    <Label x:Name="labelClientDebt" HorizontalAlignment="Center" VerticalAlignment="Top">
                        Задолженость:
                    </Label>
                </StackPanel>
            </Grid>



            <TabControl x:Name="tabControl"  Grid.Row="2" Background="{x:Null}" >

                <TabItem Header="Заказать услуги" HorizontalAlignment="Left">
                    <Grid Margin="5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.7">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF883A3A"/>
                        </LinearGradientBrush>
                        </Grid.Background>

                        <UniformGrid Grid.Column="0" Columns="2" >
                            <Button>
                                <StackPanel>
                                    <Image Source="Image\d1.png" Height="50"></Image>
                                    <TextBlock>Доставка</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button>
                                <StackPanel>
                                    <Image Source="Image\m5.png" Height="50"></Image>
                                    <TextBlock>Питание</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button>
                                <StackPanel>
                                    <Image Source="Image\u1.png" Height="50"></Image>
                                    <TextBlock>Уборка в номере</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button>
                                <StackPanel>
                                    <Image Source="Image\s1.png" Height="50"></Image>
                                    <TextBlock>СПА-услуги</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button>
                                <StackPanel>
                                    <Image Source="Image\t1.png" Height="50"></Image>
                                    <TextBlock>Транспорт</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button>
                                <StackPanel>
                                    <Image Source="Image\e2.png" Height="50"></Image>
                                    <TextBlock>Экскурсии</TextBlock>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                        <Frame Grid.Column="1">


                        </Frame>
                    </Grid>
                </TabItem>

                <TabItem Header="Просмотреть заказанные услуги" HorizontalAlignment="Center">
                    <Grid Background="#FFE5E5E5">
                        <ListView x:Name="listView" Height="562" VerticalAlignment="Top" Margin="0,0,-0.4,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>

                <TabItem Header="Изменение времени пребывания">
                    <Grid Background="#FFE5E5E5">
                        <Button x:Name="button"  HorizontalAlignment="Left" Margin="216,196,0,0" VerticalAlignment="Top" Width="249" Height="61" Click="button_Click"/>
                        <DatePicker HorizontalAlignment="Left" Margin="216,125,0,0" VerticalAlignment="Top" Width="249" FontSize="20"/>
                        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="216,60,0,0" TextWrapping="Wrap" Text="Выберете дату выезда" VerticalAlignment="Top" Height="33" Width="249" FontSize="20"/>
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>
    </Grid>
</Window>
